<!DOCTYPE html>
<html>
<head>
  <title>Computers</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-faded">
    <ul class="nav navbar-nav">
      <li class="nav-item <%= current_page?(welcome_hello_path) ? 'active' : '' %>">
        <%= link_to 'Uvod', welcome_hello_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item <%= current_page?(welcome_version_path) ? 'active' : '' %>">
        <%= link_to 'Verze', welcome_version_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item <%= current_page?(computers_path) ? 'active' : '' %>">
        <%= link_to t(:computers), computers_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item <%= current_page?(new_import_computers_path) ? 'active' : '' %>">
        <%= link_to 'Import', new_import_computers_path, :class => 'nav-link' %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item <%= current_page?(computers_path) ? 'active' : '' %>">
          <%= link_to "OdhlÃ¡sit (#{current_user.email})", destroy_user_session_path, :method => 'delete', :class => 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </nav>
  <br>

  <% if notice.present? %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <% if alert.present? %>
    <div class="alert alert-danger"><%= alert %></div>
  <% end %>

  <%= yield %>
</div>
</body>
</html>
